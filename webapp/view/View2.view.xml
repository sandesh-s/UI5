<sandesh:View controllerName="ironman.controller.View2" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:sandesh="sap.ui.core.mvc">

<f:SimpleForm  editable="true">
	<f:content>
		<Label text="Employee ID"></Label>
		<Input enabled="{/empStr/enabled}" value="{/empStr/empNo}"></Input>
		
		<Label text="Employee Name"></Label>
		<Input enabled="{/empStr/enabled}" value="{/empStr/eName}"></Input>	
		
		<Label text="Salary"></Label>
		<Input enabled="{/empStr/enabled}" value="{/empStr/salary}"></Input>
		
		<Label text="Currency"></Label>
		<Input enabled="{/empStr/enabled}" value="{/empStr/currency}"></Input>
	</f:content> 
	
</f:SimpleForm>

<Button text="Make Editable" press="onMakeEditable"></Button>


