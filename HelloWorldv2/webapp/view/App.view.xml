<mvc:View
	controllerName="sandesh.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<!--<Text text="View loaded from view.xml"/>-->
	<App>
		<pages>
			<Page title="{i18n>homePageTitle}">
				<content>
					<Panel
						headerText="{i18n>helloPanelTitle}">
						<content>
							<Button
								text="{i18n>showHelloButtonText}"
								press="onShowHellow"/>
								
							<Input
								value="{/recipient/name}"
								description="World{/recipient/name}"
								valueLiveUpdate="true"
								width="60%"/>
						</content>
					</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>

